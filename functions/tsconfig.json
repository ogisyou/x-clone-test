{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}